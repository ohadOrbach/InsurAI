# =============================================================================
# InsurAI - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# LLM Provider Configuration
# -----------------------------------------------------------------------------
# Options: "google" (recommended), "openai", "anthropic", "mock"
LLM_PROVIDER=google

# Google Gemini API Key (get from https://aistudio.google.com/apikey)
GOOGLE_API_KEY=your_google_api_key_here

# LLM Model
# Google: gemini-2.0-flash, gemini-1.5-pro
# OpenAI: gpt-4o, gpt-4o-mini
# Anthropic: claude-3-5-sonnet-20241022
LLM_MODEL=gemini-2.0-flash
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024

# -----------------------------------------------------------------------------
# Embedding Configuration
# -----------------------------------------------------------------------------
# Options: "gemini" (recommended), "bge" (open source), "openai"
EMBEDDING_PROVIDER=gemini
EMBEDDING_MODEL=models/text-embedding-004

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://insur_user:insur_password@localhost:5432/insur
VECTOR_STORE_TYPE=pgvector

# -----------------------------------------------------------------------------
# OCR Settings
# -----------------------------------------------------------------------------
USE_MOCK_OCR=false
OCR_USE_GPU=false
OCR_LANGUAGE=en

# -----------------------------------------------------------------------------
# Server Settings
# -----------------------------------------------------------------------------
DEBUG=true
HOST=0.0.0.0
PORT=8000
